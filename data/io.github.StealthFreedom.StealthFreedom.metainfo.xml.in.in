<component type="desktop-application">
  <!-- Main info: -->
  <id>@app-id@</id>
  <name>Stealth Freedom</name>
  <summary>Get untraceable access to the Internet without censorship</summary>
  <description>
    <p>Stealth Freedom helps you bypass government censorship by using the VLESS proxy protocol. VLESS masks your network activity as a regular web browser connection, so the government thinks you are just browsing the web.</p>
    <p>Features:</p>
    <ul>
      <li>Support for VLESS (with XTLS-Reality) connection links</li>
    </ul>
    <p>To run Stealth Freedom, your system must have:</p>
    <ul>
      <li>systemd</li>
      <!-- Translators: Do NOT translate this string! It's a term. -->
      <li>CGroupsV2 (unified_cgroup_hierarchy)</li>
      <li>podman 4.8.0 or newer</li>
    </ul>
  </description>

  <!-- Legal: -->
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <!-- Contributors: -->
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name translatable="no">ewokthepreparer</developer_name>
  <!-- Introduced with Appstream 1.0, but not yet fully supported by corresponding projects -->
  <developer id="github.com/ewokthepreparer">
    <name translatable="no">ewokthepreparer</name>
  </developer>

  <!-- Screenshots: -->
  <screenshots>
    <screenshot type="default">
      <caption>Main window</caption>
      <image>https://raw.githubusercontent.com/StealthFreedom/StealthFreedom/main/data/resources/screenshots/en/main_window.png</image>
    </screenshot>
  </screenshots>

  <!-- Links: -->
  <url type="homepage">https://github.com/StealthFreedom/StealthFreedom</url>
  <url type="bugtracker">https://github.com/StealthFreedom/StealthFreedom/issues</url>
  <url type="help">https://github.com/StealthFreedom/StealthFreedom/discussions</url>
  <url type="donation">https://github.com/StealthFreedom/StealthFreedom#donate</url>
  <url type="translate">https://github.com/StealthFreedom/StealthFreedom#translating-stealth_freedom</url>
  <url type="vcs-browser">https://github.com/StealthFreedom/StealthFreedom</url>

  <!-- Releases: -->
  <releases>
    <release type="development" version="0.1.0" date="2024-02-06T00:00:00Z" urgency="medium">
      <url type="details">https://github.com/StealthFreedom/StealthFreedom/blob/main/CHANGELOG.md</url>
      <description>
        <p>First release!</p>
      </description>
    </release>
